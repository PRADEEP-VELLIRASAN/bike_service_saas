# Environment configuration for Bike Service Station
# Copy this file to .env and fill in your values

# Application
APP_NAME="Bike Service Station Management"
APP_VERSION="1.0.0"
DEBUG=true

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/bike_service_db
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/bike_service_db

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# SMTP Email Configuration
# For Gmail: Enable "Less secure apps" or use App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@bikeservice.com
SMTP_FROM_NAME=Bike Service Station
SMTP_TLS=true

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
